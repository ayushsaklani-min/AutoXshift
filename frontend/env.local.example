# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Alchemy API Key for Polygon Amoy
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Contract Addresses (will be filled after deployment)
NEXT_PUBLIC_AUTOX_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_SHIFT_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_SWAP_CONTRACT_ADDRESS=0x...

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001

# Optional: explicit backend URL (used if present)
NEXT_PUBLIC_BACKEND_URL=https://autoxshift-backend.onrender.com

# WalletConnect Project ID (optional)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Environment
NEXT_PUBLIC_ENV=development
